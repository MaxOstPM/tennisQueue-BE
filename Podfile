platform :ios, '15.0'
use_frameworks!

target 'SolarAtlas' do
  # ReSwift for Redux-style state management
  pod 'ReSwift'
  # Firebase dependencies (core, Firestore, and Remote Config)
  pod 'FirebaseCore'
  pod 'FirebaseFirestore'
  pod 'FirebaseRemoteConfig'
  # Google Mobile Ads SDK (AdMob)
  pod 'Google-Mobile-Ads-SDK'
  pod 'GoogleUserMessagingPlatform'
  # Development tooling for linting and formatting
  pod 'SwiftLint'
  pod 'SwiftFormat/CLI'
  # Optional: Analytics if enabled
  # pod 'FirebaseAnalytics'
end

# After editing this file, run:
#   pod install --repo-update
# Then open the generated .xcworkspace file.
